<?xml version="1.0" encoding="utf-8"?>

<project ptx-version="2" source="pretext" xsl="pretext">
  <targets>
    <target
        name="web"
        format="html"
        publication="html.xml"
        source="main.ptx"
        output-dir="build/html">

      <stringparams author.tools="yes" html.css.extra="external/_static/css/custom.css" />
    </target>
    <target
        name="runestone"
        format="html"
        publication="runestone.xml"
        source="main.ptx"
        platform="runestone">
      <stringparams author.tools="yes" html.css.extra="external/_static/css/custom.css" />
    </target>
    <target name="print" format="pdf" output-filename="bhsawesome.pdf" />
  </targets>
</project>
